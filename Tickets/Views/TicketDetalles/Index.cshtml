@model IEnumerable<Regularidad.Models.TicketDetalle>

@{
    ViewData["Title"] = "Detalles del Ticket";
   
}

<h1>Detalle de los tickets</h1>

<div class="d-flex justify-content-end  ">
    <a asp-action="Create" class="btn p-3 font-weight-bold" style=" background-color: #dfc207">
        <i class="fa-solid fa-folder-plus fa-2xl" style="color: dark"></i>
        Crear nuevo
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
               Descripcion del pedido
            </th>
            <th>
                Fecha Estado
            </th>
            <th>
                Ticket asociado
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ticket.NombreTicket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado.Descripcion)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm ">
                        <i class="fa-solid fa-circle-info fa-xl" style="color: #343232;"></i>
                    </a>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm ">
                        <i class="fa-solid fa-file-pen fa-xl" style="color: #343232;"></i>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm ">
                        <i class="fa-solid fa-trash fa-xl" style="color: #d10000;"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
