@model Regularidad.Models.Afiliado

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle del Afiliado</h1>
<a asp-action="Index">Volver a la lista </a>
<div>
    <hr />
    <div> </div>
    <dl class="row">
        <dt class = "col-sm-2">
            Apellido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            Nombres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class = "col-sm-2">
            Dni
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class = "col-sm-2">
           Fecha de nacimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dd>
            @if (!string.IsNullOrEmpty(@Model.foto))
            {
                <img src="~/images/afiliados/@Model.foto" class="img-thumnail" asp-append-version="true" style="max-height:80px; max-width:80px">
            }
        </dd>
    </dl>
</div>
<div>

    <a class="btn btn-dark mt-3" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    
</div>
