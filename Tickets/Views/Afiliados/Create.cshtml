@model Regularidad.Models.Afiliado

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo afiliado</h1>
<div class="d-flex justify-content-lg-around gap-3">
    <div class="row w-50 m-3 p-3 rounded bg-light shadow-sm">
        <h2>Crear nuevo afiliado</h2>

            <div>
                <a asp-action="Index">Volver a la lista</a>
            </div>
        <div class="col-lg">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group m-2">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="Nombres" class="control-label"></label>
                    <input asp-for="Nombres" class="form-control" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="Dni" class="control-label"></label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group row m-2">
                    <label> Seleccione fotografía</label>
                    <input class="mt-2 custom-file-input" asp-for="foto" type="file" accept="image/jpeg" />
                </div>
                <div class="form-group m-2 mt-3 d-flex justify-content-end  align-items-end">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row w-50 m-3 p-3 rounded bg-light shadow-sm">
        <h3>Cargar lista</h3>
        <div class="col-lg d-flex" style=" min-height: 20rem;" >
            <form asp-action="Importar" enctype="multipart/form-data">
                <div class="form-group row m-2">
                    <label> Seleccione un archivo CSV para importar</label>
                    <input class="mt-2" asp-for=" foto" type="file" accept="image/jpeg" id="import" />
                </div>
                <div  class="form-group m-2 mt-3 d-flex justify-content-end  align-items-end ">
                    <input type="submit" value="Importar" class="btn btn-primary" />
                </div>
                
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
